<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_bg"
            android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/authorization_box"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_medial_28dp"
            android:paddingRight="@dimen/spacing_medial_28dp"
            android:paddingTop="@dimen/spacing_medial_28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/login_indicator"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_accent"/>

                <TextView
                    android:id="@+id/enter_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="@dimen/spacing_medial_28dp"
                    android:text="ВОЙТИ"
                    android:textColor="@color/red"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal_16dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_medial_28dp">

                <!--  Email Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white_grey">

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_normal_16dp"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/font_small_14sp"/>

                </android.support.design.widget.TextInputLayout>

                <!--  Password Label -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white_grey">

                    <EditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Пароль"
                        android:inputType="textPassword"
                        android:textSize="@dimen/font_small_14sp"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_medial_28dp">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="126dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/spacing_normal_16dp"
                    android:layout_marginTop="@dimen/spacing_medial_28dp"
                    android:background="@drawable/button_shape"
                    android:text="Войти"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small_14sp"/>

                <TextView
                    android:id="@+id/link_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Забыли пароль?"
                    android:textColor="@color/white_grey"
                    android:textSize="@dimen/font_small_14sp"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</ScrollView>