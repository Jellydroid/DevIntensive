<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@drawable/nav_header_bg"
                android:paddingBottom="@dimen/spacing_small_8dp"
                android:paddingLeft="@dimen/spacing_normal_16dp"
                android:paddingRight="@dimen/spacing_normal_16dp"
                android:paddingTop="@dimen/spacing_medial_24dp">

    <ImageView
        android:id="@+id/avatar_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/spacing_normal_16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Марина Кравченко"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small_14sp"/>

        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="marina_kravchenko@yahoo.com"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small_14sp"/>
    </LinearLayout>

</RelativeLayout>